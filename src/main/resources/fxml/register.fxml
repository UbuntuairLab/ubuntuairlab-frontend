<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.aige.apronsmart.controllers.RegisterController"
            styleClass="login-container"
            stylesheets="@../css/main.css">
    
    <center>
        <VBox alignment="CENTER" spacing="25" styleClass="login-box">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            
            <!-- Logo/Title -->
            <VBox alignment="CENTER" spacing="10">
                <Text text="AIG APRON SMART" styleClass="app-title"/>
                <Text text="Créer un compte" styleClass="login-subtitle"/>
            </VBox>
            
            <!-- Registration Form -->
            <VBox spacing="20" styleClass="form-container">
                
                <!-- Username Field -->
                <VBox spacing="8">
                    <Label text="Nom d'utilisateur" styleClass="form-label"/>
                    <TextField fx:id="usernameField" 
                              promptText="Entrez votre nom d'utilisateur"
                              styleClass="form-input"/>
                </VBox>
                
                <!-- Email Field -->
                <VBox spacing="8">
                    <Label text="Email" styleClass="form-label"/>
                    <TextField fx:id="emailField" 
                              promptText="Entrez votre email"
                              styleClass="form-input"/>
                </VBox>
                
                <!-- Password Field -->
                <VBox spacing="8">
                    <Label text="Mot de passe" styleClass="form-label"/>
                    <PasswordField fx:id="passwordField" 
                                  promptText="Entrez votre mot de passe"
                                  styleClass="form-input"/>
                </VBox>
                
                <!-- Confirm Password Field -->
                <VBox spacing="8">
                    <Label text="Confirmer le mot de passe" styleClass="form-label"/>
                    <PasswordField fx:id="confirmPasswordField" 
                                  promptText="Confirmez votre mot de passe"
                                  styleClass="form-input"/>
                </VBox>
                
                <!-- Role Selection -->
                <VBox spacing="8">
                    <Label text="Rôle" styleClass="form-label"/>
                    <ComboBox fx:id="roleComboBox" 
                             promptText="Sélectionnez votre rôle"
                             styleClass="form-input"
                             maxWidth="Infinity">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="operator"/>
                                <String fx:value="supervisor"/>
                                <String fx:value="admin"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>
                
                <!-- Error Message -->
                <Label fx:id="errorLabel" 
                      styleClass="error-label" 
                      wrapText="true"
                      visible="false"
                      managed="false"/>
                
                <!-- Success Message -->
                <Label fx:id="successLabel" 
                      styleClass="success-label" 
                      wrapText="true"
                      visible="false"
                      managed="false"/>
                
                <!-- Register Button -->
                <Button fx:id="registerButton"
                       text="Créer un compte"
                       styleClass="primary-button"
                       onAction="#handleRegister"
                       defaultButton="true"
                       maxWidth="Infinity"/>
                
                <!-- Login Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Vous avez déjà un compte ?" styleClass="form-text"/>
                    <Hyperlink text="Se connecter" 
                              fx:id="loginLink"
                              onAction="#handleBackToLogin"
                              styleClass="login-link"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
